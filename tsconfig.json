{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "outDir": "./themes/usips/static/js",
    "rootDir": "./src/ts",
    "declaration": false,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules"]
}
